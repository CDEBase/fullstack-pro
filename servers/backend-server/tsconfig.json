{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "rootDirs": ["./src","../knexfile.ts"],
    "outDir": "./dist",
    "typeRoots": [
      "../../node_modules/@types/"
    ]
  },
  "include": [
    "../../typings/*.d.ts",
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "../../typings/*.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "webpack.config.js"
  ]
}