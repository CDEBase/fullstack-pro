{
    "builders": {
        "server": {
            "stack": [
                "server"
            ],
            "tsLoaderOptions": {
                "configFileName": "./tsconfig.json"
            },
            "enabled": true
        },
        "test": {
            "stack": "server",
            "roles": [
                "test"
            ]
        }
    },
    "options": {
        "backendBuildDir": "./dist",
        "frontendBuildDir": "./dist",
        "dllBuildDir": ".build/dll",
        "overridesConfig": "tools/webpackAppConfig.js",
        "stack": [
            "apollo",
            "ts",
            "react",
            "webpack",
            "css"
        ],
        "backendUrl": "http://{ip}:8080/graphql",
        "ssr": false,
        "webpackDll": false,
        "reactHotLoader": false,
        "persistGraphQL": false,
        "frontendRefreshOnBackendChange": false
    }
}