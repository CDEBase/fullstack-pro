{
  "name": "apollo-server",
  "version": "0.0.1",
  "description": "Starter kit for apollo server using webpack and typescript",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "prepublish": "npm run build:clean",
    "build:clean": "rimraf dist",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:notify": "npm run test:watch -- --notify",
    "start": "npm run build && node dist/main.js",
    "start:watch": "concurrently \"npm run build:watch\" \"node-dev dist/main.js\"",
    "preupver": "npm test",
    "upver": "standard-version",
    "db:migrate": "../../node_modules/.bin/knex migrate:latest --cwd ../../ --knexfile ./knexfile.ts",
    "db:migrate:rollback": "../../node_modules/.bin/knex migrate:rollback  --cwd ../../ --knexfile ./knexfile.ts",
    "db:seed": "npm run db:migrate && ../../node_modules/.bin/knex seed:run  --cwd ../../ --knexfile ./knexfile.ts"
  },
  "keywords": [
    "apollo",
    "backend",
    "apollo-server",
    "typescript",
    "webpack",
    "graphql",
    "graphiql",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdmbase/fullstack-pro.git"
  },
  "author": "CDMBase LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdmbase/fullstack-pro/issues"
  },
  "homepage": "https://github.com/cdmbase/fullstack-pro#readme",
  "settings": {
    "backendBuildDir": "packages/sample-server/dist",
    "frontendBuildDir": "packages/sample-browser-server/dist",
    "webpackDevPort": 3000,
    "apiPort": 8080,
    "ssr": false,
    "webpackDll": true,
    "frontendRefreshOnBackendChange": true,
    "reactHotLoader": false,
    "debugSQL": false,
    "persistGraphQL": true,
    "apolloLogging": false
  },
  "dependencies": {
    "@sample/schema": "*",
    "@sample/server-core": "*",
    "body-parser": "^1.17.1",
    "cors": "^2.8.3",
    "knex": "^0.13.0",
    "express": "^4.15.2",
    "concurrently": "^3.4.0",
    "helmet": "^3.6.0",
    "morgan": "^1.8.1"
  },
  "peerDependencies": {
    "subscriptions-transport-ws": "*"
  },
  "devDependencies": {
    "@sample/utils": "*",
    "jest": "^20.0.3",
    "rimraf": "^2.6.1",
    "webpack": "^2.5.1"
  },
  "typings": "dist/main.d.ts",
  "typescript": {
    "definition": "dist/main.d.ts"
  }
}