{
    "name": "sample-stack-hemera-server",
    "version": "0.0.10",
    "description": "",
    "main": "index.js",
    "private": true,
    "scripts": {
        "watch": "npm run start:dev",
        "start": "node dist/index.js",
        "start:staging": "cross-env NODE_ENV=staging ENV_FILE=../../config/staging/staging.env nodemon dist",
        "start:dev": "cross-env ENV_FILE=../../config/development/dev.env nodemon dist",
        "docker:build": "npm run build && docker build . -t $npm_package_name:$npm_package_version",
        "docker:run": "docker run -it $npm_package_name:$npm_package_version",
        "prebuild": "npm run build:clean",
        "pretest": "npm run build",
        "build": "cross-env NODE_ENV=production npm run build:dist",
        "build:watch": "npm run build:dist -- --watch",
        "build:dist": "webpack",
        "build:clean": "rimraf dist",
        "jest": "./node_modules/.bin/jest",
		"test": "jest",
		"test:debug": "npm test -- --runInBand",
		"test:watch": "npm test -- --watch"
    },
    "author": "CDMBase LLC",
    "license": "ISC",
    "dependencies": {
        "@sample-stack/core": "*",
        "@sample-stack/server-core": "*",
        "@sample-stack/hemera-counter": "*",
        "@sample-stack/microservice-hemera-plugin": "*",
        "dotenv": "^4.0.0",
        "graphql-nats-subscriptions": "^1.0.8",
        "nats": "^0.7.24",
        "helmet": "^3.6.0",
        "nats-hemera": "^3.1.7",
        "hemera-joi": "^3.0.1",
        "hemera-zipkin": "^3.0.1",
        "hemera-plugin": "0.1.1",
        "inversify": "^4.1.0",
        "reflect-metadata": "^0.1.10"
    },
    "devDependencies": {
        "cross-env": "^5.0.5",
        "jest": "^21.1.0",
        "rimraf": "^2.6.1",
        "nodemon": "^1.12.1",
        "webpack": "^3.7.1"
    },
    "optionalDependencies": {
        "nats-hemera": ">3.0.0"
    }
}