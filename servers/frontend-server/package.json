{
	"name": "frontend-server",
	"version": "0.0.1",
	"description": "Sample Client server",
	"private": true,
	"main": "index.js",
	"scripts": {
		"docker:build": "docker build . -t sample-stack-frontend:0.0.1",
		"docker:run": "docker run -it sample-stack-frontend:0.0.1",
		"prebuild": "npm run build:clean",
		"build:clean": "rimraf dist",
		"build": "cross-env NODE_ENV=production spin build",
		"start": "node --harmony dist",
		"start:staging": "cross-env NODE_ENV=staging ENV_FILE=../../config/staging/staging.env node --harmony dist",
		"watch": "spin watch",
		"watch:debug": "npm run watch -- -v",
		"watch:staging": "cross-env ENV_FILE=../../config/staging/staging.env spin watch",
		"jest": "./node_modules/.bin/jest",
		"test": "jest",
		"test:debug": "npm test -- --runInBand",
		"test:watch": "npm test -- --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cdmbase/fullstack-pro.git"
	},
	"author": "CDMBase LLC",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cdmbase/fullstack-pro/issues"
	},
	"homepage": "https://github.com/cdmbase/fullstack-pro#readme",
	"devDependencies": {
		"cross-env": "^5.0.5",
		"jest": "^21.1.0",
		"rimraf": "^2.6.1",
		"spinjs": "^0.4.15",
		"webpack": "^3.7.1"
	},
	"dependencies": {
		"@sample-stack/core": "*",
		"@sample-stack/client-core": "*",
		"@sample-stack/client-react": "*",
		"@sample-stack/client-redux": "*",
		"@sample-stack/graphql-gql": "*",
		"@sample-stack/utils": "*",
		"express": "^4.16.2"
	},
	"peerDependencies": {
		"source-map-loader": "*",
		"apollo-client": "*",
		"react": "*",
		"react-apollo": "*",
		"redux-thunk": "*",
		"react-redux": "*",
		"redux": "*",
		"reselect": "*"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"\\.(ts|tsx)$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
	}
}