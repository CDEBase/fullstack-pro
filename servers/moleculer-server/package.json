{
  "name": "sample-stack-moleculer-server",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "cli":"moleculer connect NATS",
    "watch": "npm run start:dev",
    "start": "node dist/index.js",
    "start:test": "cross-env NODE_ENV=test ENV_FILE=../../config/test/test.env nodemon dist",
    "start:staging": "cross-env NODE_ENV=staging ENV_FILE=../../config/staging/staging.env node --harmony dist",
    "start:dev": "cross-env ENV_FILE=../../config/development/dev.env nodemon dist",
    "docker:build": "npm run build && docker build . -t $npm_package_name:$npm_package_version",
    "docker:run": "docker run -it --env-file ../../config/staging/docker-staging.env  $npm_package_name:$npm_package_version",
    "prebuild": "npm run build:clean",
    "pretest": "npm run build",
    "build": "cross-env NODE_ENV=production npm run build:dist",
    "build:watch": "npm run build:dist -- --watch",
    "build:dist": "webpack",
    "build:clean": "rimraf dist",
    "jest": "./node_modules/.bin/jest",
    "test": "jest",
    "test:debug": "npm test -- --runInBand",
    "test:watch": "npm test -- --watch"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "cross-env": "^6.0.3",
    "pm2": "^4.2.1",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@cdm-logger/server": "^5.0.5",
    "@sample-stack/core": "file:../../packages/sample-core",
    "@sample-stack/counter-module-server": "file:../../packages-modules/counter/server",
    "@sample-stack/server-core": "file:../../packages/sample-server-core",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.0",
    "graphql-nats-subscriptions": "^1.4.1",
    "helmet": "^3.21.2",
    "inversify": "^5.0.1",
    "iterall": "1.3.0",
    "nats": "^1.3.2",
    "moleculer": "^0.13.0",
    "moleculer-zipkin": "0.2.2",
    "reflect-metadata": "^0.1.13"
  },
  "engines": {
    "node": ">= 8.x.x"
  }
}
