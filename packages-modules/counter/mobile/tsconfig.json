{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "native-base",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "../../../node_modules/**",
    "node_modules/hoist-non-react-statics/**",
    "lib",
    "dist",
    "webpack.config.js"
  ]
}