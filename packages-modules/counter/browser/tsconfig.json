{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "lib",
    "declarationDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "types": [
      "@types/node",
      "@types/jest",
      "../../../typings",
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "webpack.config.js",
    "rollup.config.js"
  ],
  "include": [
    "src",
    "./typings/*.d.ts"
  ]
}