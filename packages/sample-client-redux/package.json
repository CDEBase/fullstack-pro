{
  "name": "@sample/client-redux",
  "version": "0.0.1",
  "description": "GraphQL for sample",
  "main": "lib/index.js",
  "scripts": {
    "start": "webpack -p --config --progress --watch",
    "compile": "webpack -p --config --progress",
    "prepare": "npm run compile",
    "test": "yarn lint && yarn testonly",
    "test-ci": "yarn lint && yarn coverage",
    "testonly": "jest",
    "generate-graphql-types": "apollo-codegen generate src/graphql/**/*.graphql --schema schema.json --target ts --output src/schema.ts",
    "generate-graphql-schema": "apollo-codegen introspect-schema http://localhost:3000/graphql --output schema.json",
    "prepublish": "npm run build",
    "build": "npm run build:clean && npm run build:lib",
    "build:clean": "rimraf lib",
    "build:lib": "webpack",
    "build:lib:watch": "npm run build:lib -- --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/.*.(test|spec)).(js|jsx)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js-accounts/graphql.git"
  },
  "author": "David Yahalomi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/js-accounts/graphql/issues"
  },
  "homepage": "https://github.com/js-accounts/graphql#readme",
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "@types/redux": "^3.6.0",
    "awesome-typescript-loader": "^3.1.2",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-plugin-transform-regenerator": "^6.16.1",
    "babel-preset-es2015": "^6.16.0",
    "apollo-codegen": "^0.10.9",
    "graphql-code-generator": "^0.5.1",
    "jest": "^18.0.0",
    "lodash": "^4.16.4",
    "nock": "^9.0.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "apollo-client": "^0.10.1",
    "graphql-tag": "^1.1.2"
  },
  "peerDependencies": {
    "graphql": "^0.8.2",
    "redux": ">=3.6.0"
  },
  "typings": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  }
}
