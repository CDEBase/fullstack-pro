{
  "name": "@sample/client-redux",
  "version": "0.0.1",
  "description": "GraphQL for sample",
  "main": "lib/index.js",
  "scripts": {
    "start": "webpack -p --config --progress --watch",
    "compile": "webpack -p --config --progress",
    "prepare": "npm run compile",
    "jest": "./node_modules/.bin/jest",
    "test": "jest",
    "test:debug": "npm test -- --runInBand",
    "test:watch": "npm test -- --watch",
    "generate-graphql-types": "apollo-codegen generate src/graphql/**/*.graphql --schema schema.json --target ts --output src/schema.ts",
    "generate-graphql-schema": "apollo-codegen introspect-schema http://localhost:3000/graphql --output schema.json",
    "prepublish": "npm run build",
    "build": "npm run build:clean && npm run build:lib",
    "build:clean": "rimraf lib",
    "build:lib": "webpack",
    "build:lib:watch": "npm run build:lib -- --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js-accounts/graphql.git"
  },
  "author": "Veera Marni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/js-accounts/graphql/issues"
  },
  "homepage": "https://github.com/js-accounts/graphql#readme",
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "apollo-codegen": "^0.10.11",
    "eslint": "^3.17.1",
    "eslint-plugin-graphql": "^0.6.1",
    "jest": "^19.0.2",
    "lodash": "^4.17.4",
    "nock": "^9.0.11",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.3"
  },
  "dependencies": {
    "@sample/client-core": "*"
  },
  "peerDependencies": {
    "@sample/client-core": "*",
    "apollo-client": "^1.0.1",
    "graphql-tag": "^2.0.0",
    "graphql": "^0.9.0",
    "redux": ">=3.6.0"
  },
  "typings": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  }
}