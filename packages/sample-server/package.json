{
  "name": "sample-apollo-server",
  "version": "0.0.1",
  "description": "Starter kit for apollo server using webpack and typescript",
  "main": "dist/main.js",
  "scripts": {
    "pretest": "npm run build",
    "build": "npm run build:clean && npm run build:dist",
    "build:watch": "npm run build:dist -- --watch",
    "build:dist": "webpack",
    "build:clean": "rimraf dist",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:notify": "npm run test:watch -- --notify",
    "start": "npm run build && node dist/main.js",
    "start:watch": "concurrently \"npm run build:watch\" \"node-dev dist/main.js\"",
    "preupver": "npm test",
    "upver": "standard-version"
  },
  "keywords": [
    "apollo",
    "backend",
    "apollo-server",
    "typescript",
    "webpack",
    "graphql",
    "graphiql",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdmbase/fullstack-pro.git"
  },
  "author": "CDMBase LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdmbase/fullstack-pro/issues"
  },
  "homepage": "https://github.com/cdmbase/fullstack-pro#readme",
  "settings": {
    "backendBuildDir": "packages/sample-server/dist",
    "frontendBuildDir": "packages/sample-browser-server/dist",
    "webpackDevPort": 3000,
    "apiPort": 8080,
    "ssr": false,
    "webpackDll": true,
    "frontendRefreshOnBackendChange": true,
    "reactHotLoader": false,
    "debugSQL": false,
    "persistGraphQL": true,
    "apolloLogging": false
  },
  "dependencies": {
    "@sample/schema": "*",
    "graphql": "^0.9.2",
    "body-parser": "^1.17.1",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "graphql-server-express": "^0.7.1",
    "graphql-subscriptions": "^0.3.1",
    "graphql-tools": "0.11.0",
    "concurrently": "^3.4.0",
    "helmet": "^3.6.0",
    "morgan": "^1.8.1",
    "subscriptions-transport-ws": "^0.6.0"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "json-loader": "^0.5.4",
    "jest": "^20.0.3",
    "rimraf": "^2.6.1",
    "webpack": "^2.5.1"
  },
  "typings": "dist/main.d.ts",
  "typescript": {
    "definition": "dist/main.d.ts"
  }
}