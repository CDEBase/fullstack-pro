# Database counter
type Count {
    # Current amount
    amount: Int!
}

extend type Query {
    # Counter 
    count: Count
}

extend type Mutation {
    # Increase counter value, returns current counter amount
    addCount(
        # Ammount to add to counter
        amount: Int!
    ): Count
}

extend type Subscription {
    # Subscription fired when anyone increases counter
    subscribeToCount: Count
}