{
  "name": "@sample/schema",
  "version": "0.0.4",
  "description": "Sample Schema Module",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "webpack -p --config --progress --watch",
    "compile": "webpack",
    "prepublish": "npm run compile",
    "test": "npm run testonly",
    "test-ci": "npm lint && npm coverage",
    "testonly": "jest",
    "coverage": "npm run testonly -- --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/.*.(test|spec)).(js|jsx)$",
    "testPathDirs": [
      "src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/js-accounts/accounts/tree/master/packages/server"
  },
  "author": "CDMBase",
  "license": "MIT",
  "dependencies": {
    "cdm-logger": "^0.3.2",
    "graphql-tools": "0.10.0",
    "lodash": "^4.16.4"
  },
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "graphql-code-generator": "^0.5.1",
    "graphql-subscriptions": "^0.3.0",
    "rimraf": "^2.6.1",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  },
  "peerDependencies": {
    "graphql": "^0.8.0 || ^0.9.0"
  },
  "optionalDependencies": {
    "@types/graphql": "^0.8.5"
  },
  "typings": "dist/main.d.ts",
  "typescript": {
    "definition": "dist/main.d.ts"
  }
}
