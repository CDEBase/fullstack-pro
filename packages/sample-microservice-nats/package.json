{
	"name": "@sample-stack/microservice-nats",
	"version": "0.0.1",
	"description": "This is Container Configuration Service hemera plugin",
	"main": "lib/index.js",
	"scripts": {
		"jest": "./node_modules/.bin/jest",
		"test": "ENV=test ENV_FILE=../../config/development/development.env jest",
		"test:debug": "npm test -- --runInBand",
		"test:watch": "npm test -- --watch",
		"prepublish": "npm run build",
		"watch": "npm run build:lib:watch",
		"build": "npm run build:clean && npm run build:lib",
		"build:clean": "rimraf lib",
		"build:lib": "webpack",
		"build:lib:watch": "npm run build:lib -- --watch"
	},
	"publishConfig": {
		"access": "public"
	},
	"jest": {
		"testEnvironment": "node",
		"roots": [
			"src"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		],
		"transform": {
			"\\.(ts|tsx)$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "/__tests__/.*test*\\.(ts|tsx|js)$"
	},
	"engines": {
		"node": ">=4.0.0"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@sample-stack/core": "file:../sample-core",
		"@sample-stack/server-core": "file:../sample-server-core",
		"@sample-stack/utils": "file:../sample-utils"
	},
	"peerDependencies": {
		"hemera-joi": ">5.x",
		"hemera-plugin": ">=2.x",
		"nats-hemera": ">=5.x"
	},
	"typings": "lib/index.d.ts",
	"typescript": {
		"definition": "lib/index.d.ts"
	}
}
