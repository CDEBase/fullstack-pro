{
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "moduleResolution": "node16",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": false,
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./typings/*.d.ts"
  ]
}