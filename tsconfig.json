{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": false,
    "lib": [
      "ES2020",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./typings/*.d.ts",
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./typings/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
